{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "../..",
  "modulePaths": ["<rootDir>"],
  "testEnvironment": "node",
  "testRegex": ".e2e.spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": ["ts-jest", {
      "tsconfig": "<rootDir>/tsconfig.json"
    }]
  },
  "setupFilesAfterEnv": ["./test/e2e/setup.ts"]
}
